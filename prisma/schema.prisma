generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  clerkUserId String   @unique
  email       String   @unique
  name        String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  testimonials    Testimonial[]
  testimonialLink TestimonialLink?
  widgetConfig    WidgetConfig?

  @@map("users")
}

model Organization {
  id               String  @id @default(uuid())
  clerkOrgId       String  @unique
  name             String
  stripeCustomerId String? @unique
  plan             String? @default("free")
  logoUrl          String?

  projects Project[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("organizations")
}

model Project {
  id             String       @id @default(uuid())
  name           String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  testimonials     Testimonial[]
  testimonialLinks TestimonialLink[]
  widgetConfigs    WidgetConfig[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}

model Testimonial {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])

  customerName      String
  customerCompany   String?
  customerTitle     String?
  customerAvatarUrl String?

  rating     Int?
  text       String
  isApproved Boolean  @default(false)
  isFeatured Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@map("testimonials")
}

model TestimonialLink {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])

  // The unique slug/path for this user's collection form (e.g., /collect/mycompany)
  slug            String  @unique
  title           String?
  description     String?
  thankYouMessage String? @default("Thank you for your feedback!")
  isActive        Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonial_links")
}

model WidgetConfig {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])

  // Customization options for the embeddable widget
  themeColor    String  @default("#3B82F6") // e.g., Tailwind blue-500
  displayLayout String  @default("list") // "list", "carousel", "grid"
  displayOrder  String  @default("newest") // "newest", "highest_rating", "random"
  showRating    Boolean @default(true)
  showAvatar    Boolean @default(true)
  autoPlay      Boolean @default(true) // For carousel layouts
  speedMs       Int     @default(5000) // For carousel layouts

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("widget_configs")
}
